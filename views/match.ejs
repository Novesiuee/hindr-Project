<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Match</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>

  <section class="vh-100" style="background-color: #eee;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-md-12 col-xl-4">
          <% all.forEach(el=> { %>
            <% if (el.seekingGender===one.seekingGender) { %>

              <% } else {%>
                <% if (el.seekingCharacter === one.seekingCharacter || el.seekingRelationshipType === one.seekingRelationshipType) { %>


                  <form action="/hindr/match/<%= el.User.id%>/user/<%= one.User.id%>" method="post">
                    <div class="card" style="border-radius: 15px; margin-top: 20px;">
                      <div class="card-body text-center">
                        <div class="mt-3 mb-4">
                          <img src="<%= el.User.imageUrl %>" class="rounded-circle img-fluid" style="width: 100px;" />
                        </div>
                        <h4 class="mb-2">
                          <%= el.User.fullName%>
                        </h4>
                        <p class="text-muted mb-4">@<%= el.User.userName %><span class="mx-2">|</span>
                            <%= el.User.gender%>
                        </p>

                        <button type="submit" class="btn btn-primary btn-rounded btn-lg">
                          Accept
                        </button>
                      </div>
                    </div>
                  </form>
                  <% } else if (el.seekingCharacter !== one.seekingCharacter && el.seekingRelationshipType !== one.seekingRelationshipType) {%>

                    <div class="card" style="border-radius: 15px;">
                      <div class="card-body text-center">
                        <div class="mt-3 mb-4">
                          <img src="https://m.media-amazon.com/images/I/418Jmnejj8L._AC_.jpg"
                            class="rounded-circle img-fluid" style="width: 100px;" />
                        </div>
                        <h2 class="mb-2">Maaf nih Jodoh Mu Masih Dijaga Orang!</h2>

                       <a href="/hindr/home/<%=  one.User.id%>">Pulang Yuk!</a>
                      </div>
                    </div>
                    <% } %>
                      <% } %>
                        <% }) %>

                        <button><a href="/hindr/home/<%=one.User.id%>">Back to home</a></button>
        </div>
      </div>
    </div>
  </section>
</body>

</html>